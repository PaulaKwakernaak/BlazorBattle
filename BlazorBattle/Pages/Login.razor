@using Microsoft.AspNetCore.Components.Forms
@page "/login"

<h3>Login</h3>

<EditForm Model="user" OnValidSubmit="HandleLogin">
    <div class="form-group">
        <label for="username">Username</label>
        <InputText id="username" @bind-Value="user.UserName" class="form-control" style="border:1px solid blue"></InputText>

    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <InputText class="form-control" id="password" @bind-Value="user.Password" typeof="password" style="border:1px solid blue"> password </InputText>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>


@code {
    private UserLogin user = new UserLogin();

    private void HandleLogin()
    {
        Console.Write($"{user.UserName} // {user.Password}");    
    }
}
